object CCLambertianMaterial : RTMaterial
{
    Color diffuseColor;
};

CCLambertianMaterial(Color diffuseColor)
{
    this.diffuseColor = diffuseColor;
}

Color CCLambertianMaterial.shade(CCRayHit rayHit)
{
    Scalar kd = rayHit.hitNor.dot(Vec3(0, 0, 1));
    return Color(kd, kd, kd) * this.diffuseColor;
}
