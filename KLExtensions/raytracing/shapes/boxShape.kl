object Shape;

object BoxShape : Shape
{
	Vec3 size;
};

BoxShape(Xfo xfo, Vec3 size)
{
	this.xfo = xfo;
	this.size = size;
}

Box BoxShape.getBox()
{
	Vec3 scaling, translation;
	Mat33 rotation;
	this.xfo.toMat44().decompose(scaling, rotation, translation);

	return Box(translation, this.size * scaling);
}
