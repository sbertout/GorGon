    // http://ozzmaker.com/add-colour-to-text-in-python/

    String AnsiEscapeCode_Grey(String str)
    {
        return "[1;30m"+ str + "[1;m";
    }

    String AnsiEscapeCode_Red(String str)
    {
        return "[1;31m " + str + "[1;m ";
    }

